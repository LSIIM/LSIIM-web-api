{
  "compilerOptions": {
      "target": "es6",
      "module": "nodenext",
      "moduleResolution": "node16",
      "rootDirs": ["./src"],
      "types": ["node"],
      "outDir": "./dist",
      "rootDir": ".",
      "removeComments": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
          "@src/*": ["./src/*"],
      }
  },
  "include": ["./src/**/*.ts", "prisma/seeds/seed.ts"]
}